{
    "name": "OpenBB Experiments ",
    "build": {
        // Build context is '.' (the directory containing this file).
        "dockerfile": "Dockerfile",
        "context": "."
    },
    
    // START: Claude on Vertex AI Environment Variables
    // Use 'containerEnv' to set environment variables inside the container.
    // **IMPORTANT**: Replace the placeholder values with your actual project ID and region.
    "containerEnv": {
        "GOOGLE_CLOUD_PROJECT": "${localEnv:GOOGLE_CLOUD_PROJECT}", 
        "GOOGLE_CLOUD_LOCATION": "${localEnv:GOOGLE_CLOUD_LOCATION}", 
        "ANTHROPIC_VERTEX_PROJECT_ID": "${localEnv:ANTHROPIC_VERTEX_PROJECT_ID}",
        "CLAUDE_CODE_USE_VERTEX": "${localEnv:CLAUDE_CODE_USE_VERTEX}"

    },
    // END: Claude on Vertex AI Environment Variables

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.go",
                "eamodio.gitlens",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                // Tells the Python extension which interpreter to use
                "python.defaultInterpreterPath": "./.venv/bin/python",
                
                // Explicitly tell the extension to activate the environment
                "python.terminal.activateEnvironment": true
            }
        }
    },
    
    // --- New Modifications Start Here ---
    
    // 1. **Grant execution permission** to the setup script immediately after the container is created.
    "onCreateCommand": "chmod +x .devcontainer/setup.sh",

    // 2. **Execute the dedicated shell script**. This replaces the long command string.
    "postCreateCommand": "/bin/bash ${containerWorkspaceFolder}/.devcontainer/setup.sh",
    "remoteUser": "vscode"
}