{
    "name": "OpenBB Experiments ",
    "build": {
        // Build context is '.' (the directory containing this file).
        // If this file is in the root: context is root.
        // If this file is in .devcontainer/: context is .devcontainer/
        // Since Dockerfile is adjacent, the path is simply "Dockerfile".
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.go",
                "eamodio.gitlens",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                // Tells the Python extension which interpreter to use
                "python.defaultInterpreterPath": "./.venv/bin/python",
                
                // Configure terminal to use Bash
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        // ðŸ”‘ The fix to auto-activate the venv: source the script, then launch an interactive shell
                        "args": ["-c", "source ./.venv/bin/activate && exec bash"]
                    }
                }
            }
        }
    },
    // Creates the venv, installs dependencies, and registers the Jupyter kernel
    "postCreateCommand": "bash -c \"python3 -m venv .venv && ./.venv/bin/pip install --no-cache-dir -r requirements.txt && ./.venv/bin/python -m ipykernel install --name=magentic_algo_venv --display-name 'OpenBB Exp'\""
    //"remoteUser": "vscode"
}