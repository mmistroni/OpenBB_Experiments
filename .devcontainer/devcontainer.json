{
    "name": "OpenBB Experiments ",
    "build": {
        // Build context is '.' (the directory containing this file).
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.go",
                "eamodio.gitlens",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                // Tells the Python extension which interpreter to use
                "python.defaultInterpreterPath": "./.venv/bin/python",
                
                // Configure terminal to use Bash
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        // The fix to auto-activate the venv: source the script, then launch an interactive shell
                        "args": ["-c", "source ./.venv/bin/activate && exec bash"]
                    }
                }
            }
        }
    },
    
    // --- New Modifications Start Here ---
    
    // 1. **Grant execution permission** to the setup script immediately after the container is created.
    "onCreateCommand": "chmod +x .devcontainer/setup.sh",

    // 2. **Execute the dedicated shell script**. This replaces the long command string.
    "postCreateCommand": "sudo -u vscode ${containerWorkspaceFolder}/.devcontainer/setup.sh"
    
    // "remoteUser": "vscode"
}