{
    "name": "OpenBB Experiments ",
    "build": {  
        "dockerfile": "Dockerfile",
        "context": "."
    },

    "containerEnv": {
        "GOOGLE_CLOUD_PROJECT": "${localEnv:GOOGLE_CLOUD_PROJECT}", 
        "GOOGLE_CLOUD_LOCATION": "${localEnv:GOOGLE_CLOUD_LOCATION}", 
        "ANTHROPIC_VERTEX_PROJECT_ID": "${localEnv:ANTHROPIC_VERTEX_PROJECT_ID}",
        "CLAUDE_CODE_USE_VERTEX": "${localEnv:CLAUDE_CODE_USE_VERTEX}"
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.go",
                "eamodio.gitlens",
                "ms-toolsai.jupyter"
            ],
            "settings": {
                "python.defaultInterpreterPath": "./.venv/bin/python",
                "python.terminal.activateEnvironment": true
            }
        },
        "codespaces": {
            "postCreateUser": "root"
        }
    },
    
    "onCreateCommand": "chmod +x .devcontainer/setup.sh",

    // This command now runs safely because Node.js was installed in the Dockerfile
    "postCreateCommand": "npm install -g @google/gemini-cli && /bin/bash ${containerWorkspaceFolder}/.devcontainer/setup.sh",
    
    "remoteUser": "vscode",
    "containerUser": "root"
} 